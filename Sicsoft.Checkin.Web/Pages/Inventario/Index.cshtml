</div>
 

<div class="row">
    <div class="col-md-12   ">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-10">
                        <h4 class="card-title"> Inventario</h4>
                    </div>
                    <div class="col-md-2">

                    </div>
                </div>

            </div>
            <div class="card-body table-responsive">

                <table class="table" id="tablita">
                    <thead class="text-primary">
                        <tr>
                            <th>Cod. SAP</th>
                            <th>Nombre</th>
                            <th>Categoría</th>
                            <th>Bodega</th>
                            <th>Stock</th>
                            <th>Moneda</th>
                            <th>Precio</th>
                            <th>Lista Precio</th>
                            <th>Acción</th>

                        </tr>


                    </thead>


                    <tbody>
                        @foreach (var item in Model.Inventario)
                        {
                        <tr>
                            <td>@item.ItemCode</td>
                            <td>@item.ItemName</td>
                            <td>@item.Categoria</td>
                            <td>@item.WhsCode</td>
                            <td align="right">@decimal.Round(item.Stock.Value, 2).ToString("N", formato)</td>
                            <td>@item.Currency</td>
                            <td align="right">@decimal.Round(item.Total.Value, 2).ToString("N", formato)</td>
                            <td>@item.ListaPrecio</td>

                            <td>
                                <button class="btn btn-primary" onclick="javascript: ActualizaInv('@item.ItemCode', '@item.ListaPrecio') ">Actualizar</button>

                            </td>


                        </tr>
                        }

                    </tbody>
                </table>


            </div>
        </div>

    </div>
</div>
